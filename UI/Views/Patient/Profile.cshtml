@model PatientAreaModel

<div class="container">

    <main>

        <partial name="_HeaderPatient" />

        <h2>

            My Profile

        </h2>

        @if (TempData.ContainsKey("Message"))
        {
            <div class="alert alert-danger" role="alert">

                @TempData["Message"]

            </div>
        }

        <form method="post">

            <div class="form-group mb-3">

                <label>Name</label>

                <input class="form-control" placeholder="Enter name">

                <small class="form-text text-muted">(your name as shown to your doctor)</small>

            </div>

            <div class="form-group mb-3">

                <label>Phone</label>

                <input class="form-control" placeholder="Enter contact phone">

                <small class="form-text text-muted">(your phone as shown to your doctor)</small>

            </div>

            <button type="submit" class="mt-3 btn btn-primary">Update</button>

        </form>

    </main>

    <partial name="_Footer" />

</div>

