@model LibBiz.Models.Patient

@{
    ViewData["Title"] = "Register Patient Information";
}

<h1>Register Patient Information</h1>

<form asp-action="RegisterPatientInfo" method="post">
    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <input type="password" class="form-control" asp-for="Password" required>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input type="text" class="form-control" asp-for="Name" required>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone:</label>
        <input type="text" class="form-control" asp-for="Phone" required>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
