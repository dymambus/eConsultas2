@model LibBiz.Models.User
@{
    ViewData["Title"] = "Register";
}

<h1>Registo</h1>

<div class="text-center w-100">
    <main class="form-signin">
        <form asp-controller="Auth" asp-action="Register" method="post" asp-model="@Model">
            <h1 class="h3 mb-3 fw-normal">Please register</h1>

            <div class="form-floating mb-3">
                <input asp-for="Email" type="text" class="form-control" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
            </div>

            <div class="mb-3">
                <input asp-for="RoleId" value="1" class="form-check-input" type="radio" checked>
                <label class="RoleId" asp-for="RoleId">I am a Doctor</label>
            </div>

            <div>
                <input asp-for="RoleId" value="0" class="form-check-input" type="radio">
                <label class="RoleId" asp-for="RoleId">I am a Patient</label>
            </div>



            <div asp-validation-summary="All" class="text-danger"></div>

            <button class="btn btn-primary" type="submit">Register</button>

        </form>

    </main>

</div>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Voltar à Página Inicial</a>