@model LibBiz.Models.Doctor

@{
    ViewData["Title"] = "Register Doctor Information";
}

<h1>Register Doctor Information</h1>

<form asp-action="RegisterDoctorInfo" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <input type="password" class="form-control" asp-for="Password" required>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input type="text" class="form-control" asp-for="Name" required>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone:</label>
        <input type="text" class="form-control" asp-for="Phone" required>
    </div>
    <div class="form-group">
        <label asp-for="Region">Region:</label>
        <input type="text" class="form-control" asp-for="Region">
    </div>
    <div class="form-group">
        <label asp-for="City">City:</label>
        <input type="text" class="form-control" asp-for="City">
    </div>
    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>
    <div class="form-group">
        <label asp-for="SpecializationName">Specialization:</label>
        <input type="text" class="form-control" asp-for="SpecializationName">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input type="number" class="form-control" asp-for="Price">
    </div>
    <div class="form-group">
        <label for="photo">Upload a Photo:</label>
        <input type="file" class="form-control-file" id="photo" name="Photo">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
